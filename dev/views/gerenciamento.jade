div.content#gerenciamento
    section.content-header
        h1 Gerenciamento #[small visualizar, editar e excluir obras.]

    section.content
        div.row
            div.col-md-12
                table.table.table-hover
                    tr
                        th Titulo
                        th Descrição
                        th Tipo
                        th Categoria
                        th Status
                        th(colspan="1") Operações
                    tr(ng-repeat="marcador in marcadores")
                        td {{marcador.obra.titulo}}
                        td {{marcador.obra.descricao}}
                        td {{marcador.obra.tipo.denominacao}}
                        td {{marcador.obra.categoria.denominacao}}
                        td
                            select(ng-model="marcador.obra.status", 
                                   ng-change="atualizarStatusObra(marcador.obra.id, marcador.obra.status.id)", 
                                   ng-options="status.denominacao for status in statusList track by status.id").form-control
                        td
                            a(ng-href="#/editar/{{marcador.id}}")
                                i.fa.fa-pencil-square-o
                        td(ng-click="deletarMarcador(marcador.id)")
                            a(href="")
                                i.fa.fa-trash

div(ng-include="'dist/includes/modalEditar.html'")
